<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coment_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/sym_action_chat" />

    <ImageView
        android:id="@+id/comment_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/coment_p"
        android:layout_toStartOf="@+id/coment_p"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/comment_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment_s"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/comment_s"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/comment_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment_e"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/comment_e"
        android:layout_toStartOf="@+id/comment_e"
        android:clickable="false"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="写评论"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>